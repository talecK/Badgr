<%= @user_achievement.achievement.name %>
<% if can? :award, @user_achievement %>
  <%= form_for [ @user_achievement.achievement.group, @user_achievement ] do |f| %>
    <%= f.submit( "Award", :onclick => "return confirm(\"Are you sure you want to award #{@user_achievement.user.email} the '#{@user_achievement.achievement.name}' achievement?\")" )%>
  <% end %>
<% end %>
  <% if can? :deny, @user_achievement %>
  <%= form_for [ @user_achievement.achievement.group, @user_achievement ] do |f| %>
    <%= f.submit( "Deny", :onclick => "return confirm(\"Are you sure you want to deny #{@user_achievement.user.email} the '#{@user_achievement.achievement.name}' achievement?\")" )%>
  <% end %>
<% end %>

